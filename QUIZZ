<style>
  body { font-family: Arial, sans-serif; padding: 20px; background: #f4f4f4; }
  #quiz-container { background: white; padding: 20px; border-radius: 8px; max-width: 500px; margin: auto; }
  h2 { margin-top: 0; }
  button { padding: 10px; margin: 5px 0; width: 100%; cursor: pointer; }
  label, input { font-size: 1em; }
  .score { font-size: 1.2em; text-align: center; }
</style>
